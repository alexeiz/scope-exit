#ifndef included_version_hpp__
#define included_version_hpp__

#define stringify__(x)     stringify_imp__(x)
#define stringify_imp__(x) #x

#define SCOPE_EXIT_LIB_VERSION_MAJOR @PROJECT_VERSION_MAJOR@
#define SCOPE_EXIT_LIB_VERSION_MINOR @PROJECT_VERSION_MINOR@
#define SCOPE_EXIT_LIB_VERSION_PATCH @PROJECT_VERSION_PATCH@

#define SCOPE_EXIT_LIB_VERSION_STRING              \
    stringify__(SCOPE_EXIT_LIB_VERSION_MAJOR) "."  \
    stringify__(SCOPE_EXIT_LIB_VERSION_MINOR) "."  \
    stringify__(SCOPE_EXIT_LIB_VERSION_PATCH)      \

#define SCOPE_EXIT_LIB_VERSION             \
    SCOPE_EXIT_LIB_VERSION_MAJOR * 10000 + \
    SCOPE_EXIT_LIB_VERSION_MINOR * 100 +   \
    SCOPE_EXIT_LIB_VERSION_PATCH           \

